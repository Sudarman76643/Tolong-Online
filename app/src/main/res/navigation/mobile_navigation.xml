<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tolongonline.ui.home.HomeFragment"
        android:label="@string/Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.tolongonline.ui.history.HistoryFragment"
        android:label="@string/History"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.tolongonline.ui.chat.ChatFragment"
        android:label="@string/Chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.tolongonline.ui.profile.ProfileFragment"
        android:label="@string/Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/emergencyHelp"
        android:name="com.example.tolongonline.ui.main.EmergencyHelp"
        android:label="Emergency Help"
        tools:layout="@layout/fragment_emergency_help" />

</navigation>
